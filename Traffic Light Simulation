#include <iostream>
#include <cstdlib>
#include <ctime>
#include <thread>
#include <chrono>

using namespace std;

int main() {
    srand(time(0));   // random seed

    // Random time (seconds)
    int redTime = rand() % 5 + 3;     // 3â€“7 sec
    int yellowTime = rand() % 3 + 2;  // 2â€“4 sec
    int greenTime = rand() % 5 + 3;   // 3â€“7 sec

    cout << "Traffic Light Simulation Started\n\n";

    // RED Light
    cout << "ðŸ”´ RED Light\n";
    cout << "Action: STOP\n";
    cout << "Time: " << redTime << " seconds\n\n";
    this_thread::sleep_for(chrono::seconds(redTime));

    // YELLOW Light
    cout << "ðŸŸ¡ YELLOW Light\n";
    cout << "Action: READY\n";
    cout << "Time: " << yellowTime << " seconds\n\n";
    this_thread::sleep_for(chrono::seconds(yellowTime));

    // GREEN Light
    cout << "ðŸŸ¢ GREEN Light\n";
    cout << "Action: GO\n";
    cout << "Time: " << greenTime << " seconds\n\n";
    this_thread::sleep_for(chrono::seconds(greenTime));

    cout << "Simulation Ended\n";

    return 0;
}
